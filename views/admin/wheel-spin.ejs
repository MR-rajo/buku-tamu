    <script>
      // Global Variables
      let participants = [];
      let spinning = false;
      let canvas, ctx;
      const colors = [
        "#FF6B6B",
        "#4ECDC4",
        "#45B7D1",
        "#FFA07A",
        "#98D8C8",
        "#F7DC6F",
        "#BB8FCE",
        "#85C1E2",
        "#F8B739",
        "#52B788",
      ];

      // Initialize
      document.addEventListener("DOMContentLoaded", async () => {
        canvas = document.getElementById("wheelCanvas");
        ctx = canvas.getContext("2d");
        
        // Set canvas size responsively
        setCanvasSize();
        window.addEventListener('resize', setCanvasSize);

        await loadParticipants();
        await loadWinnerHistory(); // Load winner history
        setupEventListeners();
      });

      // Set canvas size based on container
      function setCanvasSize() {
        const container = document.querySelector('.wheel-container');
        if (container) {
          const size = Math.min(container.offsetWidth, container.offsetHeight);
          
          // Ensure minimum size to prevent errors
          if (size > 0) {
            canvas.width = size;
            canvas.height = size;
            
            // Redraw wheel if participants are loaded and canvas is valid
            if (participants.length > 0 && canvas.width > 0) {
              drawWheel();
            }
          }
        }
      }

      // Load Participants
      async function loadParticipants() {
        try {
          const response = await fetch("/admin/api/wheel/data");
          const result = await response.json();

          if (result.success) {
            participants = result.data;
            document.getElementById("totalParticipants").textContent =
              result.total;
            document.getElementById(
              "participantCount"
            ).textContent = `${result.total} orang`;

            if (participants.length > 0) {
              // Show wheel section first
              document.getElementById("loadingState").classList.add("hidden");
              document
                .getElementById("wheelSection")
                .classList.remove("hidden");
              
              // Wait for DOM to update, then draw wheel
              setTimeout(() => {
                setCanvasSize(); // This will call drawWheel internally
                displayParticipants();
              }, 100);
            } else {
