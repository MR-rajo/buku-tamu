      // Spin Wheel
      async function spinWheel() {
        if (spinning) return;
        spinning = true;

        const spinButton = document.getElementById("spinButton");
        spinButton.disabled = true;
        spinButton.innerHTML =
          '<i class="fas fa-spinner fa-spin mr-3"></i>MEMUTAR...';
        document.getElementById("wheelStatus").textContent =
          "Sedang memutar roda...";

        try {
          const response = await fetch("/admin/api/wheel/spin", {
            method: "POST",
          });
          const result = await response.json();

          if (result.success) {
            const winner = result.winner;
            const totalSegments = participants.length;
            const anglePerSegment = (2 * Math.PI) / totalSegments;

            // Calculate target rotation
            const winnerIndex = participants.findIndex(
              (p) => p.id === winner.id
            );
            const extraSpins = 5; // Number of full rotations
            const targetAngle =
              extraSpins * 2 * Math.PI +
              (2 * Math.PI - winnerIndex * anglePerSegment);

            // Animate wheel
            animateWheel(targetAngle, () => {
              showWinner(winner);
              spinning = false;
              spinButton.disabled = false;
              spinButton.innerHTML =
                '<i class="fas fa-play mr-3"></i>PUTAR LAGI!';
              document.getElementById("wheelStatus").textContent =
                "Siap untuk diputar";
            });
          }
        } catch (error) {
          console.error("Error spinning wheel:", error);
          Swal.fire({
            icon: 'error',
            title: 'Gagal Melakukan Undian',
            text: 'Terjadi kesalahan saat melakukan undian. Silakan coba lagi.',
            confirmButtonColor: '#ef4444',
            confirmButtonText: '<i class="fas fa-times mr-2"></i>OK',
            customClass: {
              confirmButton: 'px-6 py-3 rounded-lg font-semibold'
            }
          });
          spinning = false;
          spinButton.disabled = false;
          spinButton.innerHTML =
            '<i class="fas fa-play mr-3"></i>PUTAR SEKARANG!';
        }
      }

      // Animate Wheel - Enhanced with visual effects
      function animateWheel(targetRotation, callback) {
        const duration = 5000; // 5 seconds for smoother animation
        const startTime = Date.now();
        const startRotation = 0;
        const wheelCanvas = document.getElementById('wheelCanvas');
        const wheelContainer = document.querySelector('.wheel-container');

        // Add spinning class for effects
        wheelCanvas.style.filter = 'blur(0px)';
        wheelContainer.classList.add('spinning');

        function animate() {
          const currentTime = Date.now();
          const elapsed = currentTime - startTime;
          const progress = Math.min(elapsed / duration, 1);

          // Improved easing function (ease-out with bounce)
          const easeProgress = progress < 0.5
            ? 2 * progress * progress
            : 1 - Math.pow(-2 * progress + 2, 2) / 2;

          const currentRotation = startRotation + targetRotation * easeProgress;
          
          // Add blur effect when spinning fast
          const blurAmount = Math.sin(progress * Math.PI) * 3;
          wheelCanvas.style.filter = `blur(${blurAmount}px)`;
          
          drawWheel(currentRotation);

          if (progress < 1) {
            requestAnimationFrame(animate);
          } else {
            wheelCanvas.style.filter = 'blur(0px)';
            wheelContainer.classList.remove('spinning');
            callback();
          }
        }

        animate();
      }

