                  ];

                  const data = [
                    <% schoolStats.forEach((school, index) => { %>
                      <%= school.jumlah_tamu %><%= index < schoolStats.length - 1 ? ',' : '' %>
                    <% }); %>
                  ];

                  const colors = [
