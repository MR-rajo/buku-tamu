    <script>
      // Form validation and progress tracking
      const formFields = {
        sekolah_id: false,
        nama_lengkap: false,
        nomor_wa: false,
        foto: false,
      };

      // Camera variables
      let stream = null;
      let currentFacingMode = "user"; // 'user' for front camera, 'environment' for back camera
      const video = document.getElementById("video");
      const canvas = document.getElementById("canvas");
      const openCameraBtn = document.getElementById("openCameraBtn");
      const captureBtn = document.getElementById("captureBtn");
      const retakeBtn = document.getElementById("retakeBtn");
      const switchCameraBtn = document.getElementById("switchCameraBtn");
      const cameraContainer = document.getElementById("cameraContainer");
      const previewContainer = document.getElementById("previewContainer");
      const fotoInput = document.getElementById("foto");

      // Open camera
      openCameraBtn.addEventListener("click", async function () {
        try {
          await startCamera();
          openCameraBtn.classList.add("hidden");
          cameraContainer.classList.remove("hidden");
        } catch (error) {
          console.error("Error accessing camera:", error);
          showError(
            "Tidak dapat mengakses kamera. Pastikan izin kamera sudah diberikan."
          );
        }
      });

      // Start camera
      async function startCamera() {
        // Stop existing stream if any
        if (stream) {
          stream.getTracks().forEach((track) => track.stop());
        }

        const constraints = {
          video: {
            facingMode: currentFacingMode,
            width: { ideal: 1280 },
            height: { ideal: 720 },
          },
          audio: false,
        };

        try {
          stream = await navigator.mediaDevices.getUserMedia(constraints);
          video.srcObject = stream;
        } catch (error) {
          console.error("Error starting camera:", error);
          throw error;
        }
      }

      // Capture photo
      captureBtn.addEventListener("click", function () {
        const context = canvas.getContext("2d");

        // Set canvas size to video size
        canvas.width = video.videoWidth;
        canvas.height = video.videoHeight;

        // Draw video frame to canvas
        context.drawImage(video, 0, 0, canvas.width, canvas.height);

        // Convert canvas to base64 image
        const imageData = canvas.toDataURL("image/jpeg", 0.8);
        fotoInput.value = imageData;

        // Update progress
        validateField("foto", imageData);

        // Stop camera
        if (stream) {
          stream.getTracks().forEach((track) => track.stop());
        }

        // Show preview
        cameraContainer.classList.add("hidden");
        previewContainer.classList.remove("hidden");
      });

      // Retake photo
      retakeBtn.addEventListener("click", async function () {
        fotoInput.value = "";

        // Update progress
        validateField("foto", "");

        previewContainer.classList.add("hidden");
        try {
          await startCamera();
          cameraContainer.classList.remove("hidden");
        } catch (error) {
          console.error("Error restarting camera:", error);
          openCameraBtn.classList.remove("hidden");
        }
      });

      // Switch camera (front/back)
      switchCameraBtn.addEventListener("click", async function () {
        currentFacingMode =
          currentFacingMode === "user" ? "environment" : "user";
        try {
          await startCamera();
        } catch (error) {
          console.error("Error switching camera:", error);
          showError("Tidak dapat mengganti kamera.");
        }
      });

      // Form submission
      document
        .getElementById("bukuTamuForm")
        .addEventListener("submit", async function (e) {
          e.preventDefault();

          const formData = new FormData(this);
          const data = Object.fromEntries(formData);

          // Validasi
          if (!data.sekolah_id || !data.nama_lengkap || !data.nomor_wa) {
            showError("Semua field harus diisi!");
            return;
          }

          // Validasi foto
          if (!fotoInput.value) {
            showError("Foto harus diambil!");
            return;
          }

          // Add foto to data
          data.foto = fotoInput.value;

          // Show loading
          showLoading();

          try {
            const response = await fetch("/buku-tamu/submit", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify(data),
            });

            const result = await response.json();

            hideLoading();

            if (result.success) {
              // Show SweetAlert with progress bar
              let timerInterval;
              Swal.fire({
                title: "Berhasil!",
                html: `
                  <div class="text-center">
                    <i class="fas fa-check-circle text-green-500 text-5xl mb-4"></i>
                    <p class="text-lg mb-4">${result.message}</p>
                    <p class="text-gray-600 mb-2">Mengarahkan ke halaman sukses...</p>
                    <div class="w-full bg-gray-200 rounded-full h-2.5 mb-4">
                      <div id="progress-bar" class="bg-gradient-to-r from-green-400 to-blue-500 h-2.5 rounded-full transition-all duration-100" style="width: 0%"></div>
                    </div>
                    <p class="text-sm text-gray-500">Mohon tunggu <b id="countdown">3</b> detik</p>
                  </div>
                `,
                icon: null,
                showConfirmButton: false,
                allowOutsideClick: false,
                allowEscapeKey: false,
                timer: 3000,
                timerProgressBar: false,
                didOpen: () => {
                  const progressBar = document.getElementById("progress-bar");
                  const countdown = document.getElementById("countdown");
                  let progress = 0;
                  let timeLeft = 3;

                  timerInterval = setInterval(() => {
                    progress += 100 / 30; // Update 30 times in 3 seconds
                    if (progress > 100) progress = 100;
                    progressBar.style.width = progress + "%";

                    // Update countdown
                    const newTimeLeft = Math.ceil(
                      (3000 - progress * 30) / 1000
                    );
                    if (newTimeLeft !== timeLeft) {
                      timeLeft = newTimeLeft;
                      countdown.textContent = timeLeft;
                    }
                  }, 100);
                },
                willClose: () => {
                  clearInterval(timerInterval);
                },
              }).then(() => {
                // Redirect dengan kode dan nama sebagai query parameter
                const kode = result.kode || "";
                const nama = encodeURIComponent(result.nama_lengkap || "");
                window.location.href = `/buku-tamu/success?kode=${kode}&nama=${nama}`;
              });
            } else {
              showError(result.message);
            }
          } catch (error) {
            hideLoading();
            showError("Terjadi kesalahan. Silakan coba lagi.");
            console.error("Error:", error);
          }
        });

      // Update progress bar
      function updateProgress() {
        const completedFields =
          Object.values(formFields).filter(Boolean).length;
        const totalFields = Object.keys(formFields).length;
        const progress = (completedFields / totalFields) * 100;

        const progressBar = document.getElementById("progressBar");
        const progressText = document.getElementById("progressText");
        const submitBtn = document.getElementById("submitBtn");
        const submitIcon = document.getElementById("submitIcon");
        const submitText = document.getElementById("submitText");

        // Update progress bar dengan animasi
        setTimeout(() => {
          progressBar.style.width = progress + "%";
        }, 100);

        progressText.textContent = Math.round(progress) + "%";

        // Add glow effect when progress > 0 (without shimmer animation)
        if (progress > 0) {
          progressBar.classList.add("glowing");
        } else {
          progressBar.classList.remove("glowing");
        }

        // Change progress text color based on progress
        if (progress === 100) {
          progressText.className = "text-sm font-bold text-green-600";
        } else if (progress >= 50) {
          progressText.className = "text-sm font-bold text-purple-600";
        } else if (progress > 0) {
          progressText.className = "text-sm font-bold text-primary";
        } else {
          progressText.className = "text-sm font-bold text-gray-400";
        }

        // Update progress steps dengan warna berbeda
        const stepColors = [
          "bg-blue-500", // Sekolah
          "bg-indigo-500", // Nama
          "bg-purple-500", // WhatsApp
          "bg-pink-500", // Foto
        ];

        Object.keys(formFields).forEach((field, index) => {
          const stepElement = document.getElementById(`step${index + 1}`);

          // Remove all possible color classes
          stepElement.className = stepElement.className
            .replace(/(bg-\w+-\d+|progress-step-active)/g, "")
            .trim();

          if (formFields[field]) {
            stepElement.classList.add(
              "progress-step-active",
              stepColors[index]
            );
            // Add pulse animation for completed step
            stepElement.style.animation = "pulse 1s ease-in-out";
            setTimeout(() => {
              stepElement.style.animation = "";
            }, 1000);
          } else {
            stepElement.classList.add("bg-gray-300");
          }
        });

        // Update submit button
        if (progress === 100) {
          submitBtn.disabled = false;
          submitBtn.classList.remove("btn-disabled");
          submitBtn.classList.add("btn-enabled");
          submitIcon.className =
            "fas fa-paper-plane group-hover:rotate-45 transition-transform duration-300";
          submitText.textContent = "Submit Data";
        } else {
          submitBtn.disabled = true;
          submitBtn.classList.add("btn-disabled");
          submitBtn.classList.remove("btn-enabled");
          submitIcon.className =
            "fas fa-lock transition-transform duration-300";

          const remaining = totalFields - completedFields;
          if (remaining === 4) {
            submitText.textContent = "Lengkapi Data Terlebih Dahulu";
          } else {
            submitText.textContent = `${remaining} Field Lagi`;
          }
        }
      }

      // Validate individual fields
      function validateField(fieldName, value) {
        const previousState = formFields[fieldName];

        switch (fieldName) {
          case "sekolah_id":
            formFields.sekolah_id = value && value.trim() !== "";
            break;
          case "nama_lengkap":
            formFields.nama_lengkap = value && value.trim().length >= 2;
            break;
          case "nomor_wa":
            formFields.nomor_wa =
              value && /^[0-9]{10,15}$/.test(value.replace(/\s+/g, ""));
            break;
          case "foto":
            formFields.foto = value && value.trim() !== "";
            break;
        }

        // Field completed (notification removed per user request)

        updateProgress();
      }

      // Add event listeners for form validation
      document.addEventListener("DOMContentLoaded", function () {
        const sekolahSelect = document.getElementById("sekolah_id");
        const namaInput = document.getElementById("nama_lengkap");
        const waInput = document.getElementById("nomor_wa");

        sekolahSelect.addEventListener("change", function () {
          validateField("sekolah_id", this.value);
        });

        namaInput.addEventListener("input", function () {
          validateField("nama_lengkap", this.value);
        });

        waInput.addEventListener("input", function () {
          // Remove non-numeric characters and validate
          const cleanValue = this.value.replace(/[^0-9]/g, "");
          this.value = cleanValue;
          validateField("nomor_wa", cleanValue);
        });

        // Initial progress update
        updateProgress();
      });

      // Helper functions
      function showLoading() {
        const loadingDiv = document.createElement("div");
        loadingDiv.id = "loading-overlay";
        loadingDiv.className =
          "fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50";
        loadingDiv.innerHTML = `
                <div class="bg-white p-6 rounded-lg shadow-xl">
                    <div class="flex items-center gap-3">
                        <i class="fas fa-spinner fa-spin text-primary text-2xl"></i>
                        <span class="text-gray-700 font-medium">Memproses data...</span>
                    </div>
                </div>
            `;
        document.body.appendChild(loadingDiv);
      }

      function hideLoading() {
        const loadingDiv = document.getElementById("loading-overlay");
        if (loadingDiv) {
          loadingDiv.remove();
        }
      }

      function showSuccess(message) {
        const alertDiv = document.createElement("div");
        alertDiv.className =
          "fixed top-4 right-4 bg-green-500 text-white px-6 py-4 rounded-lg shadow-lg animate-fade-in z-50";
        alertDiv.innerHTML = `
                <div class="flex items-center gap-3">
                    <i class="fas fa-check-circle text-xl"></i>
                    <span>${message}</span>
                </div>
            `;
        document.body.appendChild(alertDiv);

        setTimeout(() => {
          alertDiv.remove();
        }, 3000);
      }

      function showError(message) {
        Swal.fire({
          icon: "error",
          title: "Oops...",
          text: message,
          confirmButtonText: "OK",
          confirmButtonColor: "#6184D6",
          customClass: {
            popup: "rounded-2xl",
            confirmButton: "rounded-lg px-6 py-2",
          },
        });
      }
    </script>
