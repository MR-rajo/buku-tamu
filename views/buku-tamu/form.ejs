    <style>
      @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap");

      body {
        font-family: "Poppins", sans-serif;
      }

      .btn-primary {
        background: linear-gradient(135deg, #6184d6 0%, #8aa5e8 100%);
        transition: all 0.3s ease;
      }

      .btn-primary:hover:not(:disabled) {
        background: linear-gradient(135deg, #4b6bb5 0%, #6184d6 100%);
        transform: translateY(-2px);
        box-shadow: 0 15px 30px rgba(97, 132, 214, 0.4);
      }

      .btn-enabled {
        background: linear-gradient(135deg, #10b981 0%, #34d399 100%);
        animation: pulse-success 2s infinite;
      }

      .btn-enabled:hover {
        background: linear-gradient(135deg, #059669 0%, #10b981 100%);
        transform: translateY(-2px);
        box-shadow: 0 15px 30px rgba(16, 185, 129, 0.4);
      }

      .btn-disabled {
        background: linear-gradient(135deg, #9ca3af 0%, #d1d5db 100%);
      }

      @keyframes pulse-success {
        0%,
        100% {
          box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.4);
        }
        50% {
          box-shadow: 0 0 0 10px rgba(16, 185, 129, 0);
        }
      }

      .progress-step-active {
        box-shadow: 0 0 0 3px rgba(255, 255, 255, 0.5),
          0 0 10px rgba(99, 102, 241, 0.4);
        transform: scale(1.1);
        transition: all 0.3s ease;
      }

      /* Step pulse animation */
      @keyframes pulse {
        0%,
        100% {
          transform: scale(1.1);
          box-shadow: 0 0 0 3px rgba(255, 255, 255, 0.5),
            0 0 10px rgba(99, 102, 241, 0.4);
        }
        50% {
          transform: scale(1.3);
          box-shadow: 0 0 0 6px rgba(255, 255, 255, 0.7),
            0 0 15px rgba(99, 102, 241, 0.6);
        }
      }

      .input-field {
        transition: all 0.3s ease;
      }

      .input-field:focus {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(97, 132, 214, 0.15);
      }

      .animate-fade-in {
        animation: fadeIn 0.6s ease-out;
      }

      .animate-slide-up {
        animation: slideUp 0.6s ease-out;
      }

      .animate-float {
        animation: float 3s ease-in-out infinite;
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
        }
        to {
          opacity: 1;
        }
      }

      @keyframes slideUp {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes float {
        0%,
        100% {
          transform: translateY(0px);
        }
        50% {
          transform: translateY(-10px);
        }
      }

      .gradient-bg {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      }

      .card-glass {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.3);
      }

      /* Custom Scrollbar */
      ::-webkit-scrollbar {
        width: 8px;
      }

      ::-webkit-scrollbar-track {
        background: #f1f1f1;
      }

      ::-webkit-scrollbar-thumb {
        background: #6184d6;
        border-radius: 4px;
      }

      ::-webkit-scrollbar-thumb:hover {
        background: #4b6bb5;
      }

      /* Progress Bar Responsive */
      @media (max-width: 640px) {
        .progress-steps {
          gap: 0.5rem;
        }

        .progress-steps span {
          font-size: 0.6rem;
        }

        .progress-steps div {
          width: 0.75rem;
          height: 0.75rem;
        }
      }

      /* Progress Bar Styling */
      #progressBar {
        background: linear-gradient(
          135deg,
          #6184d6 0%,
          #8b5cf6 25%,
          #ec4899 50%,
          #8b5cf6 75%,
          #6184d6 100%
        );
      }

      /* Progress Bar Glow Effect */
      #progressBar {
        position: relative;
      }

      #progressBar::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(
          135deg,
          rgba(97, 132, 214, 0.8) 0%,
          rgba(139, 92, 246, 0.8) 50%,
          rgba(236, 72, 153, 0.8) 100%
        );
        border-radius: inherit;
        filter: blur(4px);
        opacity: 0;
        transition: opacity 0.3s ease;
        z-index: -1;
      }

      #progressBar.glowing::after {
        opacity: 0.6;
      }
    </style>
