    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              primary: "#6184D6",
              "primary-dark": "#4B6BB5",
              "primary-light": "#8AA5E8",
            },
          },
        },
